import React from 'react';

const AttendanceCard = ({ attendance }) => {
    return (
        <div className="attendance-card">
            <h3>{attendance.date}</h3>
            <p>Status: {attendance.status}</p>
            <p>Time In: {attendance.time_in}</p>
            <p>Time Out: {attendance.time_out}</p>
        </div>
    );
};

const AttendanceList = ({ attendances }) => {
    return (
        <div className="attendance-list">
            {attendances.map((attendance) => (
                <AttendanceCard key={attendance.id} attendance={attendance} />
            ))}
        </div>
    );
};

export { AttendanceCard, AttendanceList };